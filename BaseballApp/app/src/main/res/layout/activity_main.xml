<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.aartea.baseballapp.MainActivity"    >
    <!--android:background="@drawable/baseball_player"
    android:scaleType = "fitStart"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click search to input your favorite player!"
        android:contentDescription="Click search to input your favorite player!"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_toStartOf="@+id/btnAdd"
        android:layout_toLeftOf="@+id/btnAdd" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view"
        android:layout_below="@+id/textView"
        android:contentDescription="@string/listview"></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Player"
        android:contentDescription="Add a player"
        android:id="@+id/btnAdd"
        android:onClick="click_add"
        android:layout_above="@+id/list_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Player"
        android:contentDescription="Remove a Player"
        android:id="@+id/btnRm"
        android:onClick="click_remove"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame"></FrameLayout>


</RelativeLayout>
